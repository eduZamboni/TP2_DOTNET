@page
@model TP2.Pages.CityManager.CityListModel
@{
    ViewData["Title"] = "Lista de Cidades";
}

<h1>@ViewData["Title"]</h1>

<p>Selecione uma cidade para ver os detalhes:</p>

<div class="list-group">
    @foreach (var city in Model.Cities)
    {
        <a asp-page="./CityDetails" asp-route-cityName="@city" class="list-group-item list-group-item-action">
            @city
        </a>
    }
</div>

<div class="mt-3">
    <a asp-page="/Index" class="btn btn-secondary">Voltar à Página Inicial</a>
</div>