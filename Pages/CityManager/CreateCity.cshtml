@page
@model TP2.Pages.CityManager.CreateCityModel
@{
    ViewData["Title"] = "Cadastrar Cidade";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.CityName" class="form-label"></label>
        <input asp-for="Input.CityName" class="form-control" />
        <span asp-validation-for="Input.CityName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (Model.Submitted)
{
    <div class="alert alert-success mt-3">
        Nome da cidade cadastrado: <strong>@Model.Input.CityName</strong>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}