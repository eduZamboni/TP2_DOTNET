@page "{cityName}"
@model TP2.Pages.CityManager.CityDetailsModel
@{
    ViewData["Title"] = $"Detalhes de {Model.CityName}";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-info">
    <p>Você está vendo detalhes de: <strong>@Model.CityName</strong></p>
</div>

<div class="mt-3">
    <a asp-page="./CityList" class="btn btn-primary">Voltar para Lista de Cidades</a>
    <a asp-page="/Index" class="btn btn-secondary ms-2">Página Inicial</a>
</div>