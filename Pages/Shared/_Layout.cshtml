<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TP2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <!-- Gerenciamento de Cidades -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="cityDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Cidades
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="cityDropdown">
                                <li><a class="dropdown-item" asp-page="/CityManager/CreateCity">Cadastrar Cidade</a></li>
                                <li><a class="dropdown-item" asp-page="/CityManager/CityList">Lista de Cidades</a></li>
                            </ul>
                        </li>
                        
                        <!-- Gerenciamento de Países -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="countryDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Países
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="countryDropdown">
                                <li><a class="dropdown-item" asp-page="/CountryManager/CreateCountry">Cadastrar Países</a></li>
                            </ul>
                        </li>
                        
                        <!-- Gerenciamento de Notas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="noteDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Notas
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="noteDropdown">
                                <li><a class="dropdown-item" asp-page="/NoteManager/SaveNote">Criar Nota</a></li>
                                <li><a class="dropdown-item" asp-page="/NoteManager/ViewNotes">Visualizar Notas</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TP2
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>